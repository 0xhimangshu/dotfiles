* {
    font: "JetBrainsMono Nerd Font 9";
    icon-theme: "Tela-circle-blue-dark";
    background: rgba(40, 44, 52, 0.29);
    foreground: #abb2bf;
    selected-background:rgba(255, 255, 255, 0.5);
    selected-foreground:rgb(255, 255, 255);
    border-radius: 8px;
}

configuration {
    modi: "drun";
    show-icons: true;
    drun-display-format: "{name}";
    alternate-row-colors: false;
}

window {
    width: 350px;
    height: 355px;
    transparency: "real";
    fullscreen: false;
    enabled: true;
    cursor: "default";
    spacing: 0px;
    border-radius: @border-radius;
    background-color: @background;
}

mainbox {
    enabled: true;
    spacing: 0px;
    padding: 4px;
    orientation: vertical;
    children: ["listbox", "inputbar"];
    background-color: transparent;
}

inputbar {
    enabled: true;
    padding: 4px;
    spacing: 8px;
    margin: 6px;
    background-color: rgba(33, 37, 43, 0.29);
    text-color: @foreground;
    border-radius: @border-radius;
    children: ["entry"];
}

entry {
    enabled: true;
    padding: 3px;
    text-color: inherit;
    cursor: text;
    placeholder: "Type to search...";
    placeholder-color: #5c6370;
    background-color: transparent;
}

listbox {
    padding: 0px;
    spacing: 0px;
    orientation: vertical;
    children: ["listview"];
    background-color: transparent;
}

listview {
    padding: 8px;
    spacing: 10px;
    enabled: true;
    columns: 4;
    rows: 4;
    cycle: true;
    dynamic: true;
    scrollbar: false;
    layout: vertical;
    reverse: false;
    fixed-height: true;
    fixed-columns: true;
    cursor: "default";
    background-color: transparent;
    border-radius: @border-radius;
}

element {
    orientation:                 vertical;
    enabled:                     true;
    spacing:                     2px;
    padding:                     8px;
    cursor:                      pointer;
    background-color:rgba(255, 255, 255, 0.24);
    color:                     #abb2bf;
    border-radius:               8px;
}


element selected.normal {
    background-color: @selected-background;
    text-color: @selected-foreground;
    border: 3px;
}

element-icon {
    size: 32px;
    cursor: inherit;
    background-color: transparent;
    text-color: inherit;
}

element-text {
    vertical-align: 0.5;
    horizontal-align: 0.5;
    cursor: inherit;
    background-color: transparent;
    text-color: #000000;
    font: "JetBrainsMono Nerd Font 7";
}

error-message {
    padding: 15px;
    text-color: #e06c75;
    background-color: @background;
    border-radius: @border-radius;
    children: ["textbox"];
}

textbox {
    text-color: inherit;
    background-color: inherit;
    vertical-align: 0.5;
    horizontal-align: 0.5;
}
